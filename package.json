{
  "name": "nerd-pa",
  "version": "0.0.1",
  "description": "Personal assistant for Gnerkus",
  "main": "server.js",
  "config": {
    "ISTANBUL_OPTS": "--report lcov"
  },
  "scripts": {
    "precompile": "rm -rf dist",
    "compile": "./node_modules/.bin/babel --presets es2015 -d dist/ src/",
    "start": "npm run compile && DEBUG=mottr node dist/server.js",
    "codacy": "./node_modules/.bin/babel --presets es2015 gulpfile.src.js -o gulpfile.js && ./node_modules/.bin/gulp codacy",
    "test": "npm run compile && NODE_ENV=test istanbul cover $npm_package_config_ISTANBUL_OPTS _mocha dist/test/index.js",
    "test-unit": "npm run compile && NODE_ENV=test TEST_DIR=unit _mocha dist/test/index.js",
    "test-integration": "npm run compile && NODE_ENV=test TEST_DIR=integration _mocha dist/test/index.js"
  },
  "engines": {
    "node": "5.7.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gnerkus/nerd-pa.git"
  },
  "keywords": [
    "daily",
    "log",
    "personal",
    "assistant"
  ],
  "author": "Ifeanyi Oraelosi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gnerkus/nerd-pa/issues"
  },
  "homepage": "https://github.com/gnerkus/nerd-pa#readme",
  "dependencies": {
    "body-parser": "^1.15.0",
    "dotenv": "2.0.0",
    "express": "^4.13.4",
    "pg": "^4.5.5",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.22.0"
  },
  "devDependencies": {
    "app-module-path": "1.0.6",
    "babel-cli": "6.8.0",
    "babel-core": "6.8.0",
    "babel-eslint": "6.0.4",
    "babel-preset-es2015": "6.6.0",
    "chai": "3.5.0",
    "chai-as-promised": "5.3.0",
    "codacy-coverage": "1.1.3",
    "debug": "2.2.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-plugin-import": "1.6.1",
    "eslint-plugin-jsx-a11y": "1.0.4",
    "eslint-plugin-react": "5.0.1",
    "gulp": "3.9.1",
    "gulp-codacy": "1.0.0",
    "istanbul": "0.4.3",
    "mocha": "^2.4.5",
    "mocha-lcov-reporter": "1.2.0",
    "mock-require": "^1.2.1",
    "node-mocks-http": "1.5.2",
    "sinon": "^1.17.3",
    "supertest": "1.2.0"
  }
}
